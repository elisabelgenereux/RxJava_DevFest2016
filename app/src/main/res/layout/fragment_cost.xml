<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGrey"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sample.elisabelgenereux.chiffrage.CostFragment"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/cost_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/global_project_cost"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_toRightOf="@id/cost_text"/>

    <TextView
        android:id="@+id/libraries_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/used_libraries"
        android:layout_below="@id/cost"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/libraries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@id/libraries_text" />

</RelativeLayout>
